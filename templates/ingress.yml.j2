---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: "{{ ingress_name }}"
  annotations:
    kubernetes.io/ingress.class: traefik
    cert-manager.io/cluster-issuer: "{{ cert_issuer }}"
spec:
  rules:
    - host: bestnovo.36node.com
      http:
        paths:
          - backend:
              serviceName: bestnovo-admin
              servicePort: 80
            path: /
    - host: bestnovo.36node.com
      http:
        paths:
          - backend:
              serviceName: bestnovo-auth
              servicePort: 80
            path: /auth
    - host: bestnovo.36node.com
      http:
        paths:
          - backend:
              serviceName: bestnovo-core
              servicePort: 80
            path: /bestnovo
    - host: bestnovo-gene-wx.36node.com
      http:
        paths:
          - backend:
              serviceName: bestnovo-gene-wx
              servicePort: 80
            path: /
  tls:
    - hosts:
        - bestnovo.36node.com
        - bestnovo-gene-wx.36node.com
      secretName: 36node.com